<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="yield-container">
  <div class="container">
    <div class="setting-wrapper">
      <h1>設定</h1>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, :placeholder => "名前" %>
      </div>
      <div class="field">
        <%= form.label :profile %>
        <%= form.text_area :profile, :placeholder => "プロフィール" %>
      </div>
      <div class="field">
        <p>メールアドレス<p>
        <p><%= current_user.email %></p>
      </div>
      <div class="field">
        <a href="/user/edit">メールアドレスとパスワードの変更はこちら</a>
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
</div>
<% end %>