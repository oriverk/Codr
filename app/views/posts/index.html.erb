<div class="posting-container">
  <% if user_signed_in? %>
    <%=link_to "New Post", new_post_path(user_id: current_user.id) , class:"float-btn"%>
  <% else %>
    <%=link_to "New Post", 'login' , class:"float-btn"%>
  <% end %>
</div>

<% if user_signed_in? && @posts.present? %>
<div class="posts-container">
  <% @posts.each do |post| %>
    <div class="post-container">
      <div class="post-info">
        <p>Posted by <%= User.find(post.user_id).name %></p>
        <p>Updated at <%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
        <p>Tags :<strong><%= post.name %></strong></p>
      </div>
      <div id="capture" class="content">
        <div><%= Redcarpet::Markdown.new(Redcarpet::Render::HTML, fenced_code_blocks: true).render(post.content).html_safe %></div>
      </div>
      <div class="post-action">
        <% if post.prtsc.attached? %>
          <%= link_to 'tweet', "https://twitter.com/intent/tweet?url=https://codr0.herokuapp.com/posts/#{post.id}&button_hashtag=Codr0&ref_src=twsrc%5Etfw", id:"tweet", class:"btn btn-primary-dark", target:"_blank" %>
        <% end %>
        <%= link_to 'Show', post, class:"btn btn-outline-dark" %>
        <%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-dark"%>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-danger"%>
      </div>
    </div>
  <% end%>
</div>
<% end %>

<hr>
<% if !user_signed_in? || !@posts.present? || current_user.admin = true %>
<div class="explanation-container">
  <h2>Welcome to Codr0!</h2>
  <div class="posts-container">
    <div class="post-container">
      <div class="user-info">
        <div class="user-name"><p>only for explanation</p></div>
      </div>
      <div class="post-info">
        <p class="date"></p>
      </div>
      <div id="capture" class="content">
        <div><%= Redcarpet::Markdown.new(Redcarpet::Render::HTML, fenced_code_blocks: true).render(@adminPost.content).html_safe %></div>
      </div><br>
      <div class="post-action">
        <%= link_to 'tweet', "https://twitter.com/intent/tweet?url=https://codr0.herokuapp.com/posts/#{@adminPost.id}&button_hashtag=Codr0&ref_src=twsrc%5Etfw", id:"tweet",class:"btn btn-primary-dark", target:"_blank" %>
        <%= link_to 'Show', "", class:"btn btn-outline-dark"%>
        <%= link_to 'Edit', "", class:"btn btn-outline-dark" %>
        <%= link_to 'Destroy', "", data: { confirm: 'Are you sure?' } , class:"btn btn-outline-danger"%>
      </div><br>
      <p>Only tweet button is able to push.</p>
    </div>
  </div>
</div>
<% end %>